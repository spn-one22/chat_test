  "panels": [
    {
      "type": "timeseries",
      "title": "RPS (rate of http_requests_total)",
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum by (method, route, status) (rate(http_requests_total{job=~\"$job\", instance=~\"$instance\", route=~\"$route\"}[1m]))",
          "legendFormat": "{{method}} {{route}} {{status}}",
          "interval": ""
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Error rate (5xx) %",
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "100 * (sum(rate(http_requests_total{job=~\"$job\", instance=~\"$instance\", status=~\"5..\", route=~\"$route\"}[5m])) / sum(rate(http_requests_total{job=~\"$job\", instance=~\"$instance\", route=~\"$route\"}[5m])))",
          "legendFormat": "error%",
          "interval": ""
        }
      ],
      "options": {
        "legend": {
          "displayMode": "hidden",
          "placement": "right",
          "showLegend": false
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        },
        "overrides": []
      }
    },
